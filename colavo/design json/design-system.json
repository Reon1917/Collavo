        "accent": "#00FFFF",
        "accentForeground": "oklch(0.129 0.042 264.695)",
        "border": "#e5e4dd",
        "ring": "#008080"
      },
      "dark": {
        "background": "#1e1e1e",
        "foreground": "#f9f8f0",
        "primary": "#008080",
        "primaryForeground": "#ffffff",
        "accent": "#00FFFF",
        "accentForeground": "#121212",
        "border": "#333333",
        "ring": "#00FFFF"
      }
    }
